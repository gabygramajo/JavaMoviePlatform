<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="appPersistenceUnit" transaction-type="RESOURCE_LOCAL">

        <!-- Proveedor de Persistencia (Hibernate en este caso) -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Clases de Entidad a ser gestionadas por JPA -->
        <class>org.gabydev.app.entity.Movie</class>

        <!-- Propiedades de Configuración -->
        <properties>

            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/clon_netflix"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="M3t4l1c4"/>

            <!-- Controlador (Driver) de la Base de Datos -->
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <!-- esta propiedad nos mostrará las sentencias sql que realiza por debajo hibernate -->
            <property name="hibernate.show_sql" value="true"/>

        </properties>

    </persistence-unit>
</persistence>